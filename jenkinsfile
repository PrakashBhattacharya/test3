pipeline {
    agent any
    tools {
        maven 'maven' 
    }
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
    }

